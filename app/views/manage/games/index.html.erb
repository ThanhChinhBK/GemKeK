  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class="box-header">
            <h3 class="box-title"><strong>GAME TABLE</strong></h3>
            <%= link_to "", class: "btn btn-success pull-right",
                        data: {
                            toggle: "modal",
                            url: new_manage_game_path(),
                            target: "#game-form-edit"} do
            %>
              Add new
            <% end %>
          </div>
          <% flash.each do |key, value| %>
            <div class="alert-manage-game alert alert-<%= key %>"><%= value %></div>
          <% end %>

          <!-- /.box-header -->
          <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
              <thead>
              <tr>
                <th style="width:10%">Name</th>
                <th style="width:10%">Genere</th>
                <th style="width:20%">Platform</th>
                <th style="width:10%">Rating Score</th>
                <th style="width:10%">Reviews</th>
                <th style="width:10%">Action</th>
              </tr>
              </thead>
              <tbody>
              <% @games.each do |game| %>
                <tr>
                  <td><%= link_to game_detail_path(:id => game.id) do %>
                      <%= game.name %></td>
                    <% end %>
                    <td>
                      <% game.genres_of_game.each_with_index do |genre, index| %>
                        <%= index == 0 ? "" : "," %>
                        <%= link_to game_game_list_of_genre_path(genre: genre.name) do %>
                          <%= genre.name %>
                        <% end %>
                      <% end %>
                    </td>
                    <td>
                      <% game.platform_of_game.each_with_index do |platform, index| %>
                        <%= index == 0 ? "" : "," %>
                        <%= link_to game_game_list_of_platform_path(platform: platform.name) do %>
                          <%= platform.name %>
                        <% end %>
                      <% end %>
                    </td>
                    <td><%= get_rate_average(game) %></td>
                    <td><%= game.reviews.count() %></td>
                    <td>

                      <%= link_to "#", class: "btn btn-info",
                                  data: {
                                      toggle: "modal",
                                      url: edit_manage_game_path(game.id),
                                      target: "#game-form-edit"} do
                      %>
                        Edit
                      <% end %>
                      <%= link_to "Delete", manage_game_path(game), method: :delete, class: "btn btn-danger", data: {confirm: 'Are you sure?'} %>
                    </td>

                    </tr>
              <% end %>

              </tfoot>
              </table>
          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
        <!-- /.box -->
      </div>
      <!-- /.col -->


    </div>
    <!-- /.row -->
